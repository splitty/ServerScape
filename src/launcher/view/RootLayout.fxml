<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="550.0" prefWidth="900.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="launcher.view.RootLayoutController">
   <top>
      <Pane>
         <children>
            <MenuBar prefHeight="35.0" prefWidth="900.0" BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="Main">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleMain" text="Home" />
                        <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Load Server (Refresh Afterwards)" />
                    <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Mods">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleMod" text="Open Mod Page" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleLoadHelp" text="How to-  Load Server" />
                        <MenuItem mnemonicParsing="false" onAction="#handleCreateHelp" text="How To- Create a Server File" />
                    <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Extras">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#handleDevSite" text="Dev's Personal Site" />
                        <MenuItem mnemonicParsing="false" onAction="#handleFileAll" text="FileScape- Mass File Downloader" />
                    </items>
                  </Menu>
              </menus>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets right="300.0" />
               </padding>
            </MenuBar>
         </children>
      </Pane>
   </top>
</BorderPane>
